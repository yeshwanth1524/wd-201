<html>
    <head lang="en">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.tailwindcss.com"></script>    
        <link rel="stylesheet" href="/css/styles.css">

        <title>To-Do Manager</title>
    </head>
    <body>
        <div class="grid grid-cols-6">
            <div class="col-start-3 col-span-2">
                <%- include('header.ejs') %>
                <form>
                    <div class="flex gap-2 py-4">
                        <div class="flex-auto">
                            <input type="text" placeholder="What's next?" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" required/>
                        </div>
                        <div class="flex-auto">
                            <input type="date" class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm leading-4"/>
                        </div>
                        <div class="flex-none">
                            <button type="submit" class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb">Add</button>
                        </div>
                    </div>
                </form>
                <div>


                    <h5 class="py-2">Overdue<span class="bg-gray-100 text-gray-800 text-sm font-small mr-2 px-2.5 py-0.5 rounded dark:bg-gray-200 dark:text-gray-900 justify-center items-center items" id="count-overdue">
                          <%= overdueItems.length %>
                        </span>
                      </h5>
                      <ul class="list-none">
                        <% for(var i=0; i< overdueItems.length; i++) { %>
                        <li class="Todo-Item">
                          <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-gray-100">
                            <input type="checkbox" name="" id="todo-checkbox-1" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"/>
                            <label class="ml-2 text-sm text-gray-600 cursor-pointer">
                              <%= overdueItems[i].title %>
                            </label>
                            <a href="#" class="ml-2 hidden trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                </svg>
                            </a>
                          </div>
                        </li>
                        <% } %>
                    </ul>

                    <h5>Due Today<span class="bg-gray-100 text-gray-800 text-sm font-small mr-2 px-2.5 py-0.5 rounded dark:bg-gray-200 dark:text-gray-900 justify-center items-center items"
                          id="count-due-today"><%= dueTodayItems.length %>
                        </span>
                    </h5>
                    <ul class="list-none">
                        <% for(var i=0; i< dueTodayItems.length; i++) { %>
                        <li class="Todo-Item">
                            <div class="flex items-center w-fit my-2 px-2 py-1 rounded hover:bg-purple-50">
                            <input type="checkbox" name="" id="todo-checkbox-2" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"/>
                            <label class="ml-2 text-sm text-gray-600 cursor-pointer">
                              <%= dueTodayItems[i].title %>
                            </label>
                            <a href="#" class="ml-2 hidden trash-icon ml-2">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                            </svg>
                            </a>
                          </div>
                        </li>
                        <% } %>
                      </ul>


                      <h5>Due Later<span class="bg-gray-100 text-gray-800 text-sm font-small mr-2 px-2.5 py-0.5 rounded dark:bg-gray-200 dark:text-gray-900 justify-center items-center items"
                          id="count-due-later"> <%= dueLaterItems.length %>
                        </span>
                      </h5>
                      <ul class="list-none">
                        <% for(var i=0; i< dueLaterItems.length; i++) { %>
                        <li class="Todo-Item">
                          <div class="flex items-center w-fit my-2 px-2 py-1 hover:bg-gray-100">
                            <input type="checkbox" name="" id="todo-checkbox-3" class="w-4 h-4 text-blue-600 bg-gray-100 rounded border-gray-300"/>
                            <label class="ml-2 text-sm text-gray-600 cursor-pointer">
                              <%= dueLaterItems[i].title %>
                            </label>
                            <a href="#" class="ml-2 hidden trash-icon ml-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                  </svg>
                            </a>
                          </div>
                        </li>
                        <% } %>
                      </ul>
                </div>
            </div>
        </div>
        <%- include('footer') %>
    </body>
</html>
